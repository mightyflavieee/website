---
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";

const {
  title = "Flavio Rizzoglio | Homepage",
  description = "Flavio Rizzoglio's personal website.",
} = Astro.props;
---

<html lang="en">
  <MainHead {title} {description} />
  <body class="flex h-screen flex-col overflow-auto bg-slate-900 text-white">
    <main class="h-fit md:h-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>
