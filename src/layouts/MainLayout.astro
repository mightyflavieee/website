---
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

const {
  title = "Flavio Rizzoglio | Homepage",
  description = "Flavio Rizzoglio's personal website.",
} = Astro.props;
---

<html lang="en">
  <MainHead {title} {description} />
  <body
    class="min-w-screen flex h-screen flex-col overflow-auto bg-slate-900 text-white lg:items-center"
  >
    <main class="h-full lg:w-2/3">
      <Navbar />
      <slot />
      <Footer />
    </main>
  </body>
</html>
