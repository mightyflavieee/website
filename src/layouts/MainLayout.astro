---
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";

const {
  title = "Flavio Rizzoglio | Homepage",
  description = "Flavio Rizzoglio's personal website.",
} = Astro.props;
---

<html lang="en">
  <MainHead {title} {description} />
  <body class="bg-slate-900 text-white h-screen min-h-screen flex flex-col">
    <main class="h-full">
      <slot>Default Text</slot>
    </main>
    <Footer />
  </body>
</html>
