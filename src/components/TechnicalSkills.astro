---
import { getSkills } from "../data/skills.data";
import Chip from "./Chip.astro";

const skills: string[] = getSkills();
---

<div class="mb-5 mt-10 flex flex-col gap-3 px-2">
  <span class="text-2xl font-bold">Technical skills:</span>
  <div class="flex flex-wrap gap-2">
    {
      skills.map((skill) => (
        <>
          <Chip text={skill} />
        </>
      ))
    }
  </div>
</div>
