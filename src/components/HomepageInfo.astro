---
import { getPersonalLinks } from "../data/personal-links.data";
import {
  ButtonPropsColor,
  ButtonTextSize,
  IconSide,
} from "../models/ButtonProps.model";
import { PersonalLinksData } from "../models/PersonalLink.model";
import Button from "./Button.astro";

const links: PersonalLinksData[] = getPersonalLinks();
---

<div class="mt-10 mb-10 flex flex-col gap-8 px-8">
  <div class="flex flex-col items-center gap-8">
    <span class="text-4xl font-bold">Hello, I'm Flavio! ðŸ‘‹</span>
    <img
      src="images/flavio_cropped.png"
      alt="My photo"
      class="rounded-full"
      height="288"
      width="240"
    />
    <p class="text-lg">
      I am a Software Engineer at
      <a href="https://fundvis.org" target="_blank" class="text-myLightBlue">
        Fundvis
      </a>
      and a computer science and engineering student at
      <a href="https://polimi.it" target="_blank" class="text-myLightBlue">
        Polimi
      </a>
      with a passion for innovation and problem-solving. I'm skilled in programming
      languages, algorithms, software development methodologies, and have a strong
      track record of delivering powerful results through collaboration and ongoing
      learning.
    </p>
  </div>
  <div
    class="flex flex-row justify-between px-10 md:w-full md:justify-start md:gap-4 md:px-4"
  >
    {
      links.map((link) => (
        <>
          <Button
            text=""
            href={link.linkUrl}
            icon={link.icon}
            isFilled={true}
            color={ButtonPropsColor.PRIMARY}
            classes="md:hidden"
            ariaLabel={link.ariaLabel}
          />
        </>
      ))
    }
    {
      links.map((link) => (
        <>
          <Button
            text={link.linkName}
            href={link.linkUrl}
            icon={link.icon}
            isFilled={true}
            color={ButtonPropsColor.PRIMARY}
            classes="hidden md:block md:w-1/3"
            ariaLabel={link.ariaLabel}
          />
        </>
      ))
    }
  </div>
  <div class="flex w-full flex-row md:px-4">
    <Button
      text="Need a new website? Contact Me!"
      href="mailto:flaviorizzoglio@gmail.com"
      textSize={ButtonTextSize.BIG}
      isGradient={true}
      color={ButtonPropsColor.SECONDARY}
      classes="w-full hidden md:block"
      ariaLabel="Contact me"
    />
    <Button
      text="Need a new website? Contact Me!"
      href="mailto:flaviorizzoglio@gmail.com"
      isGradient={true}
      color={ButtonPropsColor.SECONDARY}
      classes="w-full md:hidden"
      ariaLabel="Contact me"
    />
  </div>
</div>
