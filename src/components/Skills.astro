---
import { getSkills } from "../data/skills.data";
import { SkillData } from "../models/Skill.model";
import Chip from "./Chip.astro";

const skills: SkillData[] = getSkills();
---

<div class="mb-5 mt-10 flex flex-col gap-3 px-2">
  <span
    class="flex w-full justify-center border-b border-gray-600 px-2 text-2xl font-bold"
    >Skills:</span
  >
  <div class="flex flex-wrap gap-2">
    {
      skills.map((skill) => (
        <>
          <Chip text={skill.name} icon={skill.icon} />
        </>
      ))
    }
  </div>
</div>
